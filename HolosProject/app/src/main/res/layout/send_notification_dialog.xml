<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textViewNotificationTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="670dp"
        android:text="NOTIFICATION SENDER"
        android:textSize="24sp"
        android:gravity="center"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/editTextNotification"
        android:layout_width="match_parent"
        android:layout_height="-10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="553dp"
        android:hint="Enter notification here"
        android:inputType="textMultiLine"
        android:maxLines="8"
        android:minLines="3" />

    <Button
        android:id="@+id/sendNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="end"
        android:layout_marginTop="476dp"
        android:layout_marginBottom="207dp"
        android:text="SEND" />

    <Button
        android:id="@+id/backsendNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="end"
        android:layout_marginTop="540dp"
        android:layout_marginBottom="143dp"
        android:text="BACK" />


</RelativeLayout>